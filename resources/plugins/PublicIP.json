{
  "id": "PublicIP",
  "meta": {
    "name": "公网IP",
    "version": "1.0.0",
    "author": "LiteMonitor",
    "description": "公网IP插件，获取当前网络的公网IPv4地址"
  },
  "inputs": [],
  "execution": {
    "type": "chain",
    "interval": 600,
    "steps": [
      {
        "id": "get_ip",
        "url": "http://whois.pconline.com.cn/ipJson.jsp?json=true",
        "response_encoding": "gbk",
        "extract": {
          "ip": "ip"
        }
      }
    ]
  },
  "outputs": [
    {
      "key": "addr",
      "label": "公网IP",
      "short_label": "IP",
      "format_val": "{{ip}}",
      "unit": ""
    }
  ]
}